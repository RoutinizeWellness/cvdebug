      
      const parsed = JSON.parse(jsonStr);
      const { title, category, score, scoreBreakdown, analysis } = parsed;
      
      await ctx.runMutation(internal.resumes.updateResumeMetadata, {
        id: args.id,
        title,
        category,
        analysis,
        score,
        scoreBreakdown,
      });
    } catch (error) {
      console.error("Error analyzing resume:", error);
      await ctx.runMutation(internal.resumes.updateResumeMetadata, {
        id: args.id,
        title: "Resume",
        category: "Uncategorized",
        analysis: "AI analysis failed. Please try again later.",
        score: 0,
      });
    }
  },
});

// ... keep existing code (rewriteResume, optimizeLinkedIn, chat)
