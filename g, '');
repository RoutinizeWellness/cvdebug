      const parsed = JSON.parse(jsonStr);
      
      await ctx.runMutation(internal.resumes.updateResumeMetadata, {
        id: args.id,
        title: parsed.title || "Resume",
        category: parsed.category || "Other",
        score: parsed.score || 0,
        analysis: parsed.analysis || "No analysis available.",
      });
    } catch (error) {
      console.error("Error analyzing resume:", error);
      await ctx.runMutation(internal.resumes.updateResumeMetadata, {
        id: args.id,
        title: "Resume",
        category: "Uncategorized",
        score: 0,
        analysis: "Analysis failed.",
      });
    }
  },
});

export const chat = action({
  args: {
    message: v.string(),
    history: v.array(v.object({ role: v.string(), content: v.string() })),
  },
  handler: async (ctx, args) => {
    const apiKey = process.env.OPENROUTER_API_KEY;
    if (!apiKey) throw new Error("AI not configured");

    const messages = args.history.map(h => ({
      role: h.role === "user" ? "user" : "assistant",
      content: h.content,
    }));

    // Add system prompt for context
    messages.unshift({
      role: "system", 
      content: "You are a helpful Resume and Career Coach assistant. Help the user optimize their resume, answer career questions, and provide feedback."
    });

    messages.push({ role: "user", content: args.message });

    const response = await fetch("https://openrouter.ai/api/v1/chat/completions", {
      method: "POST",
      headers: {
        "Authorization": `Bearer ${apiKey}`,
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        model: "google/gemini-2.0-flash-001",
        messages: messages,
      })
    });

    if (!response.ok) {
      throw new Error(`OpenRouter API error: ${response.statusText}`);
    }

    const data = await response.json();
    return data.choices[0].message.content;
  },
});
